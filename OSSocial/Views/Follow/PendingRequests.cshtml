@model List<OSSocial.Models.Follow>?

@{
    ViewData["Title"] = "Pending Follow Requests";
}

<h2>Pending Follow Requests</h2>

@if (!(Model?.Any() ?? false))
{
    <p>No pending requests.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>From</th>
                <th>When</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var req in Model!)
            {
                <tr>
                    <td>@(req.Follower.DisplayName ?? req.FollowerId)</td>
                    <td>@(req.RequestedAt.ToString("g"))</td>
                    <td>
                        <form asp-controller="Follow" asp-action="Accept" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="followId" value="@req.Id" />
                            <input type="hidden" name="accept" value="true" />
                            <button type="submit" class="btn btn-sm btn-success">Accept</button>
                        </form>
                        <form asp-controller="Follow" asp-action="Accept" method="post" class="d-inline ms-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="followId" value="@req.Id" />
                            <input type="hidden" name="accept" value="false" />
                            <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
