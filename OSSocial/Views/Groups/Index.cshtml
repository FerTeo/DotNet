<br />
<br />

@if (TempData["message"] != null)
{
    <div class="alert @ViewBag.Alert p-3 rounded-3 text-center mb-5">
        @ViewBag.Message
    </div>
}

<br />

<a asp-controller="Groups" asp-action="Create" class="btn btn-success rounded-pill mb-5">
    <i class="bi bi-plus"></i> Create a new group
</a>

<div class="row">

    @foreach (var group in ViewBag.Groups)
    {
        <div class="col-4 mb-4">

            <div class="card">

                <div class="card-body">
                    
                    <h5 class="card-title" name="Name">@group.Name</h5>

                    @if (ViewBag.EsteAdmin)
                    {
                        <div>
                            <i class="bi bi-person"> Owned by: </i> 
                            @(group.User?.UserName ?? "Unknown Owner")
                        </div>
                        
                    }        
                    <br />

                    <a asp-controller="Groups" asp-action="GroupProfile" asp-route-id="@group.Id" class="btn btn-dark">Show group profile</a>

                </div>
            </div>
        </div>
    }

</div>