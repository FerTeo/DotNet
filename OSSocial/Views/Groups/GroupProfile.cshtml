@model OSSocial.Models.Group

<div class="container mt-5">
    
    @* HEADER GRUP *@
    <div class="card text-center mb-4">
        <div class="card-header">
            @if (Model.IsPublic)
            {
                <span class="badge bg-success">Public Group</span>
            }
            else
            {
                <span class="badge bg-warning text-dark">Private Group</span>
            }
        </div>
        <div class="card-body">
            <h2 class="card-title">@Model.Name</h2>
            <p class="card-text">@Model.Description</p>
            
            @if (Model.User != null)
            {
                <footer class="blockquote-footer">Created by <cite title="Source Title">@Model.User.UserName</cite></footer>
            }
        </div>
        
        @* JOIN GROUP button (daca esti admin poti intra in orice grup!) *@
        @if (ViewBag.IsMember != true && (Model.IsPublic || ViewBag.EsteAdmin == true))
        {
            <div class="card-footer">
                <form method="post" asp-controller="Groups" asp-action="JoinGroup">
                    <input type="hidden" name="GroupId" value="@Model.Id" />
                    <button type="submit" class="btn btn-primary">Join Group</button>
                </form>
            </div>
        }
        @* LEAVE GROUP button *@
        else
        if (ViewBag.IsMember == true && ViewBag.IsOwner == false)
        {
            <div class="card-footer">
                <form method="post" asp-controller="Groups" asp-action="LeaveGroup">
                    <input type="hidden" name="GroupId" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Leave Group</button>
                </form>
            </div>
        }
        else if (ViewBag.IsOwner == true)
        {
            <div class="card-footer">
                <form method="post" asp-controller="Groups" asp-action="LeaveGroup">
                    <input type="hidden" name="GroupId" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Delete Group</button>
                </form>
            </div>
        }
    </div>

    @* ZONA DE POSTARE (Doar pentru membrii) *@
    @* Verificam in controller drepturile, dar e bine sa ascundem si vizual *@
    @if (ViewBag.IsMember == true)
    {
        <div class="row mb-5">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-body">
                        <h5>Post something!</h5>
                    
                        @* Formularul trimite catre PostController -> CreatePost *@
                        <form method="post" asp-controller="Post" asp-action="CreatePost" enctype="multipart/form-data">
                        
                            @* CRITIC: Trimitem ID-ul grupului ascuns *@
                            <input type="hidden" name="GroupId" value="@Model.Id" />
                        
                            <br/>
                            <input type="text" name="Title" style="margin-bottom: 10px"/>
                            <br/>
                        
                            <div class="form-group mb-3">
                                <textarea name="Content" class="form-control" rows="3" placeholder="What's on your mind?"></textarea>
                            </div>
                        
                            <br/>
                            <input type="file" name="Image" class="form-control" accept="image/*,video/*" />
                            <br/>
                        
                            <button type="submit" class="btn btn-primary btn-sm">Post to Group</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    
    <hr />

    @* LISTA POSTARILOR DIN GRUP *@
    <div class="row">
        <h4 class="text-center mb-4">Group Activity</h4>

        @if (Model.GroupPosts != null && Model.GroupPosts.Any())
        {
            @foreach (var post in Model.GroupPosts.OrderByDescending(p => p.Time))
            {
                <div class="col-md-8 offset-md-2 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-circle fs-4 me-2"></i>
                                    <strong>@(post.User?.UserName ?? "Unknown User")</strong>
                                </div>
                                <small class="text-muted">@post.FormattedTime</small>
                            </div>
                            
                            <p class="card-text">@post.Content</p>

                            @if (!string.IsNullOrEmpty(post.Media))
                            {
                                <div class="text-center mt-3">
                                    <img src="@post.Media" class="img-fluid rounded" style="max-height: 400px; object-fit: contain;" />
                                </div>
                            }
                            
                            <div class="mt-3 pt-3 border-top">
                                <a href="/Post/Details/@post.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-chat-left-text"></i> Comments
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted">
                <i class="bi bi-chat-square-dots fs-1"></i>
                <p class="mt-2">No posts yet. Be the first to start a conversation!</p>
            </div>
        }
    </div>
</div>

@* LISTA MEMBRILOR DIN GRUP *@
<div class="col-md-8 offset-md-2 mb-4">
    <div>
        <h4 class="mt-5">Other Members</h4>
        <ul>
        @foreach (var member in ViewBag.Members)
        {
            <li>
                <i class="bi bi-person"></i> @(member.User?.UserName ?? "Unknown User")
            </li>
            }
        </ul> 
        </div>
</div>