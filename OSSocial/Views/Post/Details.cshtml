@model OSSocial.Models.Post
@{
    ViewData["Title"] = "See post details";
    int? editId = ViewBag.EditCommentId as int?;
}
<div class="container my-4 d-flex flex-column">
    <div class="card media-app shadow-sm">
        <div class="card-header bg-transparent">
            <h5 class="mb-0">Photos</h5>
        </div>

        <div class="card-body">
            <div class="row g-4">
                <!-- Left: media / post content (large) -->
                <div class="col-12 col-md-7 media-area d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h5 class="card-title mb-0">@Model.Title</h5>
                            <small class="text-muted">@Model.Time.ToString("g")</small>
                        </div>
                        <div>
                            <form asp-action="Delete" asp-controller="Post" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </div>
                    </div>

                    <div class="media-display flex-fill d-flex align-items-center justify-content-center">
                        @if (!string.IsNullOrEmpty(Model.Media))
                        {
                            var media = Model.Media.ToLower();
                            if (media.EndsWith(".mp4") || media.EndsWith(".mov"))
                            {
                                <video class="w-100 media-element" controls>
                                    <source src="@Model.Media" type="video/mp4" />
                                </video>
                            }
                            else
                            {
                                <img src="@Model.Media" alt="Post media" class="img-fluid rounded media-element" />
                            }
                        }
                        else
                        {
                            <div class="text-content w-100">
                                <p class="fs-5">@Model.Content</p>
                            </div>
                        }
                    </div>

                    <div class="mt-3">
                        @await Html.PartialAsync("_ReactionsPartial", Model.Id)
                    </div>
                </div>

                <!-- Right: comments (inside same card) -->
                <div class="col-12 col-md-5 comments-area d-flex flex-column">
                    <div class="mb-2 d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">Comments : @((Model.Comments?.Count) ?? 0)</h6>
                    </div>

                    <div class="comments-column flex-fill p-2">
                        @if (Model.Comments != null && Model.Comments.Any())
                        {
                            foreach (var comm in Model.Comments.OrderByDescending(c => c.DateCreated))
                            {
                                <div id="comment-@comm.Id" class="comment-item mb-2 p-2 rounded d-flex align-items-start justify-content-between">
                                    <div class="comment-body">
                                        <strong>@comm.User?.UserName</strong>
                                        <div class="text-muted small">@comm.DateCreated.ToString("g")</div>

                                        @* Inline edit form if this comment is being edited *@
                                        @if (editId.HasValue && editId.Value == comm.Id && (comm.UserId == ViewBag.CurrentUserId || ViewBag.EsteAdmin == true))
                                        {
                                            <form method="post" asp-controller="Comments" asp-action="Edit" asp-route-id="@comm.Id" class="mt-2">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="PostId" value="@Model.Id" />
                                                <textarea name="Content" class="form-control" rows="3" required>@comm.Content</textarea>
                                                <div class="mt-2 d-flex gap-2">
                                                    <button type="submit" class="btn btn-primary btn-sm">Save</button>
                                                    <a class="btn btn-secondary btn-sm" href="@Url.Action("Details","Post", new { id = Model.Id })#comment-@comm.Id">Cancel</a>
                                                </div>
                                            </form>
                                        }
                                        else
                                        {
                                            <div class="mt-2">
                                                <p class="mb-0">@comm.Content</p>
                                            </div>
                                        }
                                    </div>

                                    <div class="comment-actions ms-2 d-flex align-items-start">
                                        @if (comm.UserId == ViewBag.CurrentUserId || ViewBag.EsteAdmin == true)
                                        {
                                            <a class="btn btn-outline-primary btn-sm me-1" href="@Url.Action("Details","Post", new { id = Model.Id, edit = comm.Id })#comment-@comm.Id" title="Edit">Edit</a>

                                            <form method="post" asp-controller="Comments" asp-action="Delete" asp-route-id="@comm.Id" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="returnUrl" value="@Url.Action("Details", "Post", new { id = Model.Id })" />
                                                <button class="btn btn-outline-danger btn-sm" type="submit" title="Delete">Delete</button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-muted small">No comments yet.</div>
                        }
                    </div>

                    <!-- Add comment form moved inside comments-area, directly under the comments list -->
                    <div class="mt-2 comment-form px-2">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <form method="post" asp-controller="Comments" asp-action="New" class="d-flex">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="PostId" value="@Model.Id" />
                                <textarea name="Content" class="form-control me-2" rows="2" placeholder="Write a comment..." required></textarea>
                                <button class="btn btn-primary" type="submit">Add comment</button>
                            </form>
                        }
                        else
                        {
                            <div class="text-center text-muted">You must be logged in to leave a comment.</div>
                        }
                    </div>
                </div>
            </div>
        </div>

        @* card-footer removed: add-comment is now inside comments-area *@
    </div>
</div>

<style>
/* Local styles for the single-container photos app layout */
.media-app .card-header h5 { font-weight: 600; letter-spacing: 0.2px; }
.media-area .media-display { max-height: 72vh; display:flex; align-items:center; justify-content:center; }
.media-element { width:100%; height:auto; max-height:72vh; object-fit:cover; border-radius:8px; }

.comments-area { min-height: 320px; display:flex; flex-direction:column; }
.comments-column { max-height: 60vh; overflow-y:auto; padding-right:0.4rem; }

/* Make action buttons larger and easier to tap */
.comment-item .btn {
    padding: 0.4rem 0.6rem;
    font-size: 0.95rem;
    line-height: 1;
}

/* Ensure the comment body takes most space and actions sit to the side */
.comment-item { background: rgba(30,144,255,0.03); border: 1px solid rgba(30,144,255,0.06); }
.comment-item .comment-body { max-width: calc(100% - 68px); }

/* Add comment form styles */
.comment-form .form-control {
    resize: vertical;
    min-height: 48px;
}
.comment-form .btn {
    min-width: 84px;
}
</style>
