@model OSSocial.Models.Post

@{
    ViewData["Title"] = "Add new post";
}
<h1 >@ViewData["Title"]</h1>

@if (ViewBag.ContinutInadecvat != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong><i class="bi bi-exclamation-triangle-fill"></i> Post Rejected!</strong> 
        <br/>
        @ViewBag.ContinutInadecvat
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post" action="/Post/CreatePost"  enctype="multipart/form-data">
    <label>Title</label>
    <br/>
    <input type="text" name="Title"/>
    <br/>
    
    <label>Content</label>
    <br/>
    <input type="text" name="content"/>
    <br/>
    
    <label>Upload Photo</label>
    <br/>
    <input type="file" name="Image" class="form-control" accept="image/*,video/*" />
    <br/>
    
    <br/>
    <br/>
    <button type="submit">Post!</button>
</form>


<p >In progress</p>