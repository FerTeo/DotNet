@model OSSocial.Models.Post

@{
    ViewData["Title"] = "Add new post";
}

<div class="container my-4 d-flex justify-content-center">
    <div class="card shadow-sm w-100" style="max-width:720px; height:80vh;">
        <div class="card-header bg-transparent">
            <h5 class="mb-0 fw-semibold">Create Post</h5>
        </div>

        <div class="card-body d-flex flex-column p-3">
            @if (ViewBag.ContinutInadecvat != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong><i class="bi bi-exclamation-triangle-fill"></i> Post Rejected!</strong>
                    <br />
                    @ViewBag.ContinutInadecvat
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form method="post" action="/Post/CreatePost" enctype="multipart/form-data" class="d-flex flex-column flex-grow-1">
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input type="text" name="Title" class="form-control form-control-lg" placeholder="Give your post a title" required/>
                </div>

                <div class="mb-3 d-flex flex-column flex-grow-1">
                    <label class="form-label">Content</label>
                    <textarea name="content" class="form-control flex-grow-1" rows="10" placeholder="Write something..." required></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Upload Media</label>
                    <input type="file" name="Image" class="form-control" accept="image/*,video/*" />
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary btn-lg">Post!</button>
                </div>
            </form>
        </div>
    </div>
</div>